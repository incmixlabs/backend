{
  "extends": "@incmix-api/config/hono.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    /* Bundler mode */
    "jsx": "react-jsx",
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "tsc-alias": {
    "resolveFullPaths": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "e2e",
    "test",
    "**/test/**",
    "**/e2e/**",
    "playwright.config.ts"
  ]
}
