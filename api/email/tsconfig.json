{
  "extends": "@incmix-api/config/hono.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    /* Bundler mode */
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },

    "outDir": "./dist"
  },
  "tsc-alias": {
    "resolveFullPaths": true
  },
  "include": ["src", "migrations"],
  "exclude": ["node_modules", "e2e"]
}
