{
  "extends": "@incmix-api/config/hono.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noEmit": false,
    "declaration": true
  },
  "tsc-alias": {
    "resolveFullPaths": true
  },
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/test/**",
    "**/tests/**",
    "**/__tests__/**",
    "**/e2e/**",
    "**/vitest.config.*",
    "**/playwright.config.*",
    "dist/**",
    "**/node_modules/**"
  ]
}
